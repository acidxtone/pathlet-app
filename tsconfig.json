{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/hooks/*": ["src/hooks/*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/shared/*": ["src/shared/*"],
      "@/auth/*": ["src/auth/*"],
      "@/pages/*": ["src/pages/*"],
      "@shared/schema": ["src/shared/schema.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
